<? $pagetitle = 'New User'; ?>

<?php \Laravel\Section::start('content'); ?>
	<?php if(Session::has('success')): ?>
		<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<p>User has been added successfully.</p>
		</div>
	<?php endif; ?>
	<?php if(isset($errors) && count($errors->all()) > 0): ?>
		<div class='alert alert-error'>
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<ul>
				<?php foreach($errors->all('<li>:message</li>') as $message): ?>
				<?php echo  $message ; ?>
				<?php endforeach; ?>
			</ul>
		</div>
	<?php endif; ?>
	<h2>Add New User</h2>
	<?php echo  Form::open('admin/register', '', array('class' => 'form-horizontal')) ; ?>
	<p>
	<?php echo  Form::label('username', "Enter user's student number.") ; ?>
	<?php echo  Form::text('username', '', array('placeholder' => 'c1xxx9xx')); ?>
	</p>
	<?php echo  Form::label('email', "Enter the user's email.") ; ?>
	<?php echo  Form::email('email', '', array('placeholder' => 'newuser@email.com')); ?>
	<?php echo  Form::button('Add User', array('class' => 'btn btn-success' )) ; ?>
	<?php echo  Form::close() ; ?>
<?php \Laravel\Section::stop(); ?>
<?php echo view('layouts.member')->with(get_defined_vars())->render(); ?>