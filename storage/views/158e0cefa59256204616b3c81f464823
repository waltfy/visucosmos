<? $pagetitle = 'Add Privilege'; ?>

<?php \Laravel\Section::start('content'); ?>
	<?php if(Session::has('add_success')): ?>
		<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<p>User is now an administrator.</p>
		</div>
	<?php endif; ?>
	<?php if(Session::has('remove_success')): ?>
		<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<p>User is not an administrator anymore.</p>
		</div>
	<?php endif; ?>
	<?php if(isset($errors) && count($errors->all()) > 0): ?>
		<div class='alert alert-error'>
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<ul>
				<?php foreach($errors->all('<li>:message</li>') as $message): ?>
				<?php echo  $message ; ?>
				<?php endforeach; ?>
			</ul>
		</div>
	<?php endif; ?>
	<h2>Add Privilege</h2>
	<?php echo  Form::open('settings/add_admin', '', array('class' => 'form-horizontal')) ; ?>
	<p>
	<?php echo  Form::label('username', "Enter user's student number.") ; ?>
	<?php echo  Form::text('username', '', array('placeholder' => 'c1xx1xx8')); ?>
	<?php echo  Form::hidden('current_user', Auth::user()->username ) ; ?>
	<?php echo  Form::button('Add Privilege', array('class' => 'btn btn-success' )) ; ?>
	</p>
	<?php echo  Form::close() ; ?>

	<h2>Remove Privilege</h2>
	<?php echo  Form::open('settings/rm_admin', '', array('class' => 'form-horizontal')) ; ?>
	<p>
	<?php echo  Form::label('username', "Enter user's student number.") ; ?>
	<?php echo  Form::text('username', '', array('placeholder' => 'c1xx1xx8')); ?>
	<?php echo  Form::hidden('current_user', Auth::user()->username ) ; ?>
	<?php echo  Form::button('Remove Privilege', array('class' => 'btn btn-danger' )) ; ?>
	</p>
	<?php echo  Form::close() ; ?>
<?php \Laravel\Section::stop(); ?>
<?php echo view('layouts.member')->with(get_defined_vars())->render(); ?>